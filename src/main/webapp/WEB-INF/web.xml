<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         id="WebApp_ID" version="3.1">
  
    <display-name>KHIT</display-name>
    
    <welcome-file-list>
        <welcome-file>INDEX.jsp</welcome-file>
    </welcome-file-list>

    <!-- Define Servlets -->
    <servlet>
        <servlet-name>Setup2FA</servlet-name>
        <servlet-class>com.yourpackage.Setup2FA</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Setup2FA</servlet-name>
        <url-pattern>/setup2fa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Verify2FA</servlet-name>
        <servlet-class>com.yourpackage.Verify2FA</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Verify2FA</servlet-name>
        <url-pattern>/verify2fa</url-pattern>
    </servlet-mapping>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>MyRealm</realm-name>
    </login-config>

    <security-role>
        <role-name>user</role-name>
    </security-role>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>
