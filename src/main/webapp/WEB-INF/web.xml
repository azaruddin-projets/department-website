<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Application Name -->
    <display-name>KHIT-AIML</display-name>

    <!-- Welcome File (CASE-SENSITIVE) -->
    <welcome-file-list>
        <welcome-file>INDEX.jsp</welcome-file>
    </welcome-file-list>

    <!-- ================= SERVLETS ================= -->

    <servlet>
        <servlet-name>Setup2FA</servlet-name>
        <servlet-class>com.yourpackage.Setup2FA</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Setup2FA</servlet-name>
        <url-pattern>/setup2fa</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Verify2FA</servlet-name>
        <servlet-class>com.yourpackage.Verify2FA</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Verify2FA</servlet-name>
        <url-pattern>/verify2fa</url-pattern>
    </servlet-mapping>

    <!-- =============== SECURITY (OPTIONAL) =============== -->

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>MyRealm</realm-name>
    </login-config>

    <security-role>
        <role-name>user</role-name>
    </security-role>

 

</web-app>
